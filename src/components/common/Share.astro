---
import {
  IoLogoFacebook,
  IoLogoLinkedin,
  IoLogoMastodon,
} from "react-icons/io5";
import { FaBluesky, FaXTwitter } from "react-icons/fa6";

interface Props {
  title?: string;
  description?: string | null;
  folder?: string;
  id?: string;
}

const { title, description, folder, id }: Props = Astro.props;

const baseURL = "https://goldenpathdevops.io";

const iconClass =
  "glass-t rounded text-txt-p dark:text-darkmode-txt-p flex h-9 w-9 items-center justify-center text-center intersect:animate-fadeUp opacity-0 hover:bg-opacity-20";
---

<ul class="">
  <li class="inline-block px-1">
    <a
      class={iconClass}
      aria-label="facebook share button"
      href={`https://facebook.com/sharer/sharer.php?u=${baseURL}/${folder}/${id}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoFacebook className="h-6 w-6" />
    </a>
  </li>
  <li class="inline-block px-1">
    <a
      class={iconClass}
      aria-label="x share button"
      href={`https://x.com/intent/tweet?text=${encodeURIComponent(title || "")}&url=${encodeURIComponent(`${baseURL}/${folder}/${id}`)}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <FaXTwitter className="h-6 w-6" />
    </a>
  </li>
  <li class="inline-block px-1">
    <a
      class={iconClass}
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/sharing/share-offsite/?url=${baseURL}/${folder}/${id}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoLinkedin className="h-6 w-6" />
    </a>
  </li>
  <li class="inline-block px-1">
    <a
      class={iconClass}
      aria-label="mastodon share button"
      href={`https://mastodon.social/share?text=${encodeURIComponent(`${title} ${baseURL}/${folder}/${id}`)}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoMastodon className="h-6 w-6" />
    </a>
  </li>
  <li class="inline-block px-1">
    <a
      class={iconClass}
      aria-label="bluesky share button"
      href={`https://bsky.app/intent/compose?text=${encodeURIComponent(`${title} ${baseURL}/${folder}/${id}`)}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <FaBluesky className="h-6 w-6" />
    </a>
  </li>
</ul>
